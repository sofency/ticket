  <!--    <url-pattern>/login.action</url-pattern>-->
  <!--  </filter-mapping>-->

  <!--设置会话维持的时间-->
  <session-config>
    <session-timeout>3600</session-timeout>
  </session-config>
  
  <welcome-file-list>
    <welcome-file>/index.html</welcome-file>
  </welcome-file-list>
</web-app>